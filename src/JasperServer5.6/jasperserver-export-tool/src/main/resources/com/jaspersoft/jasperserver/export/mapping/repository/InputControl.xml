<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">

<mapping>
	<class name="com.jaspersoft.jasperserver.export.modules.repository.beans.InputControlBean" extends="com.jaspersoft.jasperserver.export.modules.repository.beans.ResourceBean">
		<map-to xml="inputControl"/>
		<field name="type" type="byte">
			<bind-xml name="type" node="element"/>
		</field>
		<field name="mandatory" type="boolean">
			<bind-xml name="mandatory" node="element"/>
		</field>
		<field name="readOnly" type="boolean">
			<bind-xml name="readOnly" node="element"/>
		</field>
		<field name="visible" type="boolean">
			<bind-xml name="visible" node="element"/>
		</field>
		<field name="dataType" type="com.jaspersoft.jasperserver.export.modules.repository.beans.ResourceReferenceBean">
			<bind-xml name="dataType" node="element"/>
		</field>
		<field name="listOfValues" type="com.jaspersoft.jasperserver.export.modules.repository.beans.ResourceReferenceBean">
			<bind-xml name="listOfValues" node="element"/>
		</field>
		<field name="query" type="com.jaspersoft.jasperserver.export.modules.repository.beans.ResourceReferenceBean">
			<bind-xml name="query" node="element"/>
		</field>
		<field name="queryVisibleColumns" type="string" collection="array">
			<bind-xml name="queryVisibleColumn" node="element"/>
		</field>
		<field name="queryValueColumn" type="string">
			<bind-xml name="queryValueColumn" node="element"/>
		</field>
		<field name="defaultValue" type="other">
			<bind-xml name="defaultValue" node="element"/>
		</field>		
	</class>
</mapping>
